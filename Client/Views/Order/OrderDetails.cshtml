@model Client.Models.OrderViewModel

<div>
    <h4>Order Information</h4>
    <p><strong>Delivery Address:</strong> @Model.DeliveryAddress.Street, @Model.DeliveryAddress.City, @Model.DeliveryAddress.ZipCode, @Model.DeliveryAddress.Country</p>
    <p><strong>Total Price:</strong> $@Model.TotalPrice</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>
<div>
    <a href="@Url.Action("Orders", "Order")" class="btn btn-secondary" style="margin-top: 10px;">Back to Orders</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Price * item.Quantity)</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Name" width="100" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

