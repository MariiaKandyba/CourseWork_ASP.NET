@model List<DTOs.Orders.OrderDto>

@{
    ViewData["Title"] = "Ваші замовлення";
}

<h2>Ваші замовлення</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Ви ще не зробили жодного замовлення.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID Замовлення</th>
                <th>Дата</th>
                <th>Адреса доставки</th>
                <th>Статус</th>
                <th>Деталі</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @order.DeliveryAddress.Street,
                        @order.DeliveryAddress.City,
                        @order.DeliveryAddress.ZipCode,
                        @order.DeliveryAddress.Country
                    </td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("OrderDetails", "Order", new { id = order.Id })" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
